{
  "compilerOptions": {
    "target": "es2015", 
    "module": "es2015",
    "lib": ["ES2017", "DOM", "DOM.Iterable"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./",
    "rootDir": "./src",

    "strict": true,
    
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    
    "moduleResolution": "node",

    "inlineSourceMap": false,
    "removeComments": true
  },
  "exclude": ["index.d.ts", "index.js"]
}
